<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.akshay.gbuattendance"
    android:installLocation="auto"
    android:versionCode="16"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="com.akshay.gbuattendance.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.akshay.gbuattendance.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.akshay.gbuattendance.SubjectsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.akshay.gbuattendance.WeeklySubjectsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.akshay.gbuattendance.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.akshay.gbuattendance.NameAndCriteriaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.akshay.gbuattendance.ChooseAvatarActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.akshay.gbuattendance.DetailedAnalysisActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.akshay.gbuattendance.GoToDateActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.akshay.gbuattendance.OverallAttendanceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.akshay.gbuattendance.SettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.akshay.gbuattendance.ShowNameCardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.akshay.gbuattendance.ExtraClassActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.akshay.gbuattendance.FeedbackActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.akshay.gbuattendance.HelpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.akshay.gbuattendance.StartScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Transparent" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.akshay.gbuattendance.AboutUsActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.akshay.gbuattendance.GoToDateOldActivity" />
        <activity
            android:name="com.akshay.gbuattendance.PredictorActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.akshay.gbuattendance.PrevAttActivity" />

        <service android:name="com.akshay.gbuattendance.MyFirebaseMessagingService" >
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name="com.akshay.gbuattendance.MyFirebaseInstanceIDService" >
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <receiver
            android:name="com.google.android.gms.measurement.AppMeasurementReceiver"
            android:enabled="true"
            android:exported="false" >
        </receiver>
        <receiver
            android:name="com.google.android.gms.measurement.AppMeasurementInstallReferrerReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.INSTALL_PACKAGES" >
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.google.android.gms.measurement.AppMeasurementService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name="com.google.android.gms.measurement.AppMeasurementJobService"
            android:enabled="true"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />
        <!--
 FirebaseMessagingService performs security checks at runtime,
             no need for explicit permissions despite exported="true"
        -->
        <service
            android:name="com.google.firebase.messaging.FirebaseMessagingService"
            android:exported="true" >
            <intent-filter android:priority="-500" >
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <receiver
            android:name="com.google.firebase.iid.FirebaseInstanceIdReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.akshay.gbuattendance" />
            </intent-filter>
        </receiver>
        <!--
 Internal (not exported) receiver used by the app to start its own exported services
             without risk of being spoofed.
        -->
        <receiver
            android:name="com.google.firebase.iid.FirebaseInstanceIdInternalReceiver"
            android:exported="false" />
        <!--
 FirebaseInstanceIdService performs security checks at runtime,
             no need for explicit permissions despite exported="true"
        -->
        <service
            android:name="com.google.firebase.iid.FirebaseInstanceIdService"
            android:exported="true" >
            <intent-filter android:priority="-500" >
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <provider
            android:name="com.google.firebase.provider.FirebaseInitProvider"
            android:authorities="com.akshay.gbuattendance.firebaseinitprovider"
            android:exported="false"
            android:initOrder="100" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <provider
            android:name="com.android.tools.fd.runtime.InstantRunContentProvider"
            android:authorities="com.akshay.gbuattendance.com.android.tools.fd.runtime.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>